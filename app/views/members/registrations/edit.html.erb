<h2>貴方の情報を編集</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>
<div class="field form-group">
  <%= f.label :"画像",class: "center-block"%>
  <%= f.file_field :image ,class: "center-block"%>
</div>
<div class="field form-group">
  <%= f.label :"名前",class: "center-block"%>
  <%= f.text_field :name , autofocus: true ,class: "form-control" %>
</div>
<div class="field form-group">
  <%= f.label :email,class: "center-block"%>
  <%= f.email_field :email,autocomplete: "email" ,class: "form-control" %>
</div>
<div class="field form-group">
  <%= f.label :"生年月日",class: "center-block"%>
  <%= f.text_field :birth ,class: "form-control" %>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div>Currently waiting confirmation for:
  <%= resource.unconfirmed_email %></div>
<% end %>

<div class="field form-group">
  <%= f.label :password ,class: "center-block"%>
  <i>(leave blank if you don't want to change it)</i><br/>
  <%= f.password_field :password, autocomplete: "off" ,class: "form-control" %>
  <% if @minimum_password_length %>
  <br/>
  <em><%= @minimum_password_length %>
    characters minimum</em>
  <% end %>
</div>

<div class="field form-group">
  <%= f.label :password_confirmation ,class: "center-block"%><br/>
  <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "form-control" %>
</div>

<div class="field form-group">
  <%= f.label :current_password ,class: "center-block"%>
  <i>(we need your current password to confirm your changes)</i><br/>
  <%= f.password_field :current_password, autocomplete: "off" ,class: "form-control" %>
</div>

<div class="actions form-group">
  <%= f.submit "Update" %>
</div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy?
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
